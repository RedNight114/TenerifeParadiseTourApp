ANALYTICS_ID=your_production_analytics_id_here

# ========================================
# CONFIGURACIÓN DE RATE LIMITING (PRODUCCIÓN)
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ========================================
# CONFIGURACIÓN DE AUDITORÍA (PRODUCCIÓN)
# ========================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# ========================================
# CONFIGURACIÓN DE UPLOAD (PRODUCCIÓN)
# ========================================
MAX_FILE_SIZE_MB=10
MAX_IMAGE_SIZE_MB=5
COMPRESSION_QUALITY=0.8
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1920

# ========================================
# CONFIGURACIÓN DE CACHÉ (PRODUCCIÓN)
# ========================================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ========================================
# CONFIGURACIÓN DE LOGS (PRODUCCIÓN)
# ========================================
LOG_LEVEL=warn
LOG_TO_FILE=false
LOG_TO_DATABASE=true

# ========================================
# CONFIGURACIÓN DE PERFORMANCE (PRODUCCIÓN)
# ========================================
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_LAZY_LOADING=true
ENABLE_PREFETCHING=true
ENABLE_COMPRESSION=true

