# Configuración de Redsys - Entorno de PRODUCCIÓN
# IMPORTANTE: Usar claves de producción de Redsys

# Credenciales de Redsys (PRODUCCIÓN)
# ⚠️  IMPORTANTE: Obtener estas claves de la web de Canales de Redsys para producción
REDSYS_MERCHANT_CODE=your_production_merchant_code_here
REDSYS_TERMINAL=your_production_terminal_here
REDSYS_SECRET_KEY=your_production_secret_key_here
REDSYS_ENVIRONMENT=https://sis.redsys.es/realizarPago

# Configuración de la aplicación
NEXT_PUBLIC_SITE_URL=https://tenerifeparadisetoursexcursions.com

# Configuración de Supabase (PRODUCCIÓN)
NEXT_PUBLIC_SUPABASE_URL=your_production_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key_here

# Configuración de Vercel Blob Storage (PRODUCCIÓN)
BLOB_READ_WRITE_TOKEN=your_production_vercel_blob_token_here

# Configuración de auditoría y logs (PRODUCCIÓN)
AUDIT_LOG_ENABLED=true
RATE_LIMIT_ENABLED=true

# Configuración de seguridad (PRODUCCIÓN)
JWT_SECRET=your_production_jwt_secret_here
ENCRYPTION_KEY=your_production_encryption_key_here

# Configuración de correo electrónico (PRODUCCIÓN)
SMTP_HOST=your_production_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_production_smtp_user_here
SMTP_PASS=your_production_smtp_password_here

# Configuración de monitoreo (PRODUCCIÓN)
SENTRY_DSN=your_production_sentry_dsn_here
ANALYTICS_ID=your_production_analytics_id_here

# Configuración de rate limiting (PRODUCCIÓN)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Configuración de upload (PRODUCCIÓN)
MAX_FILE_SIZE_MB=10
MAX_IMAGE_SIZE_MB=5
COMPRESSION_QUALITY=0.8
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1920

# Notas importantes para PRODUCCIÓN:
# - ⚠️  NUNCA usar claves de pruebas en producción
# - 🔑 Obtener claves de producción de https://canales.redsys.es/
# - 🌐 El entorno usa sis.redsys.es (servidor de producción)
# - 🔒 Asegurar que todas las claves sean seguras y únicas
